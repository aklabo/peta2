		<script>

		var __websocket = null;

		function _load_boxes() {

			var request = {
				type: 'GET',
				data: JSON.stringify({}),
				contentType: 'application/json',
				url: '/boxes',
				success: function(data) {
					console.log('success');
					console.log(JSON.stringify(data));
					$.each (data["data"], function(i, e) {
						console.log(e);
						_create_new_box(e.x, e.y, e.text);
					});
				}
			}

			$.ajax(request);
		}

		function _onload_document() {

			//
			// div-canvas
			//
			{
				document.getElementById("div-canvas").onmousedown = _on_begindrag_canvas;
				document.getElementById("div-canvas").onmouseup = _on_dragend_canvas;
			}

			//
			// Socket.IO
			//
			{
				// Socket.IO による双方向通信を開始します。
				__websocket = io();
				// メッセージ受信(コメント貼り付け)
				__websocket.on('chat message', function(m) {
					_create_new_box(m.x, m.y, m.text);
				});
				// セッション数の変化
				__websocket.on('sessions changed', function(m) {
					$("#div-current-sessions").text("" + m.count + " session(s) alive.");
				});
			}

			//
			// コメントをロードします。
			//
			{
				_load_boxes();
			}
		}

		var dragging_position = null;

		function _on_begindrag_canvas(e) {

			//
			// detecting canvas position.
			//
			var canvas = document.getElementById("div-canvas");
			if (canvas == null)
				return;

			// var canvas_position = {
			// 	x: canvas.offsetLeft,
			// 	y: canvas.offsetTop
			// };

			// dragging_position = {
			// 	x: window.event.x - canvas_position.x,
			// 	y: window.event.y - canvas_position.y
			// };

			dragging_position = {
				// Safe on [Firefox, Chrome]
				x: e.screenX, /*window.event.x,*/
				// Safe on [Firefox, Chrome]
				y: e.clientY /*window.event.y*/
			};
		}

		function _show_inputbox() {

			$("#myModal").modal("show");
		}

		function _on_dragend_canvas(e) {

			if(dragging_position == null)
				return;
			// var current_position = {x: window.event.x, y: window.event.y};
			var current_position = {x: e.screenX, y: e.screenY};
			if (!_show_inputbox())
				return;
		}

		function _onclick_text_cancel() {

			_hide_inputbox();
		}

		function _hide_inputbox() {

			$("#myModal").modal("hide");
		}

		function _pop_comment_value() {

			var comment = $("#comment").val();
			$("#comment").val("");
			return comment;
		}

		function _broadcast_message(x, y, text) {
			// var text = $('#m').val();
			// socket.emit('chat message', text);
			__websocket.emit('chat message', {x: x, y: y, text: text});
			// erase
			// $('#m').val('');
			return false;
		}

		function _create_new_box(x, y, text) {

			var new_element = document.createElement('DIV');
			new_element.id = "";
			new_element.innerHTML = text;
			new_element.className = "panel panel-default div-box";
			new_element.style.left = "" + x + "px";
			new_element.style.top = "" + y + "px";
			var canvas = document.getElementById("div-canvas");
			if (canvas == null)
				return;
			canvas.appendChild(new_element);
		}

		function _on_click_apply() {

			// 入力ボックスを隠します。
			_hide_inputbox();

			// ドラッグ開始位置を調べています。予期しない状態のときは現在の操作をキャンセルしています。
			if (dragging_position == null) {
				alert("ASSERTION FAILURE");
				return;
			}

			// 入力情報をサーバーへ通知します。
			_broadcast_message(
					dragging_position.x,
					dragging_position.y,
					_pop_comment_value());
		}
		</script>
